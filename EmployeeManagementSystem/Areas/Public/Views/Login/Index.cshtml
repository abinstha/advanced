@model EmployeeManagementSystem.Models.User
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<p class="login-box-msg">Sign in to start your session</p>
@ViewBag.error
<form asp-area="Public" asp-controller="Login" asp-action="Login" method="post">
    <div class="form-group has-feedback">
        <input type="email" asp-for="Email" asp class="form-control" placeholder="Email" />
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" asp-for="Password" class="form-control" placeholder="Password" />
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <div class="row">
        <div class="col-xs-8">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox"> Remember Me
                </label>
            </div>
        </div><!-- /.col -->
        <div class="col-xs-4">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Sign In</button>
        </div><!-- /.col -->
    </div>
</form>
<a asp-area="Public" asp-controller="Register" asp-action="Add" class="text-center">Register a new membership</a>
