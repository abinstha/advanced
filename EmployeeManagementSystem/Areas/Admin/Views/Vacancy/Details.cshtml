@model VacancyDetailsViewModel
@section Title{
    Vacancy Details
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Vacancy For : @Model.Vacancy.Designation.Title</h3>
    </div>
    <div class="box-body">
        <table class="table table-borderless">
            <tr>
                <td>Department</td>
                <td>:</td>
                <td>@Model.Vacancy.Department.Name</td>
            </tr>
            <tr>
                <td>Designation</td>
                <td>:</td>
                <td>@Model.Vacancy.Designation.Title</td>
            </tr>
            <tr>
                <td>HOD</td>
                <td>:</td>
                <td>@Model.Vacancy.Department.DepartmentHead</td>
            </tr>
            <tr>
                <td>Department Contact</td>
                <td>:</td>
                <td>@Model.Vacancy.Department.Contact / @Model.Vacancy.Department.Address</td>
            </tr>
            <tr>
                <td>Expiry Date</td>
                <td>:</td>
                <td>@Model.Vacancy.ExpiryDate</td>
            </tr>
            <tr>
                <td>Job Description</td>
                <td>:</td>
                <td>@Model.Vacancy.Description</td>
            </tr>
            <tr>
                <td>Job Specification</td>
                <td>:</td>
                <td>@Model.Vacancy.Specification</td>
            </tr>
        </table>
    </div>
    <div class="box-footer text-center">
        <a asp-controller="Vacancy" asp-action="Index" class="btn btn-primary">
            <i class="fa fa-arrow-circle-left" style="padding-right: 5px;"></i>Back to List
        </a>
        <a asp-action="Edit" asp-controller="Vacancy" asp-route-id="@Model.Vacancy.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-controller="Vacancy" asp-route-id="@Model.Vacancy.Id" class="btn btn-danger">Delete</a>
    </div>
</div>