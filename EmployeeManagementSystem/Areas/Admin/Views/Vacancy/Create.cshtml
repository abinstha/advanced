@model VacancyViewModel
@section Title{
    Create Vacancy
}
<!--Vacancy Create Box Starts Here-->
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Add New Vacancy</h3>
        <a asp-controller="Vacancy" asp-action="Index" class="btn btn-primary pull-right">All Vacancies</a>
    </div>
    <!--form start-->
    <form asp-area="Admin" asp-controller="Vacancy" asp-action="Save" method="post" role="form">
        <div class="box-body">
            <div class="form-group">
                <label>Designation</label>
                <select asp-for="DesignationId" asp-items="Model.Designations" class="form-control"></select>
            </div>
            <div class="form-group">
                <label>Department</label>
                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfVacancy"></label>
                <input class="form-control" asp-for="NumberOfVacancy" />
            </div>
            <div class="input-group datepicker date" data-provide="datepicker">
                <label asp-for="ExpiryDate"></label>
                <input asp-for="ExpiryDate" class="form-control" placeholder="Deadline...">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <!--Bootstrap-wysihtml5 Text Editor for description-->
                <textarea class="textarea" asp-for="Description" placeholder="Place some text here"
                          style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
                </textarea>
            </div>
            <div class="form-group">
                <label asp-for="Specification"></label>
                <!--Bootstrap-wysihtml5 Text Editor for description-->
                <textarea class="textarea" asp-for="Specification" placeholder="Place some text here"
                          style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">
                </textarea>
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div><!--Vacancy Create Box Ends Here-->
@section Scripts
    {
    <script>
        $('.datepicker').datepicker({
            format: "yyyy-mm-dd",
            todayHighlight: true,
            startDate: "Date.now()",
            clearBtn: true,
            orientation: "bottom auto",
            daysOfWeekDisabled: "6",
            autoclose: true,
        });
        $(".textarea").wysihtml5();
    </script>
}