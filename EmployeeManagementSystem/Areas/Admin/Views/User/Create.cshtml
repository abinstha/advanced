@model UserViewModel
@section Title{
    Create Employee
}
<h1 class="h3 mb-2 text-gray-800">Add New Employee</h1>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary float-left">New Employee</h6>
        <a asp-controller="User" asp-action="Index" class="btn btn-primary float-right">All Employees</a>
    </div>
    <div asp-validation-summary="All"></div>
    <form asp-area="Admin" asp-controller="User" enctype="multipart/form-data" asp-action="Create" method="post" role="form">
        <div class="card-body">

            <div class="form-group">
                <label asp-for="Name"></label>
                <input class="form-control" asp-for="Name" />
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" class="form-control"></select>
            </div>
            <div class="input-group datepicker date" data-provide="datepicker">
                <label asp-for="Dob"></label>
                <input asp-for="Dob" class="form-control" placeholder="Deadline...">
                <div class="input-group-addon">
                    <span class="glyphicon glyphicon-th"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DesignationId"></label>
                <select asp-for="DesignationId" asp-items="Model.Designations" class="form-control form-control-user"></select>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId"></label>
                <select asp-for="DepartmentId" asp-items="Model.Departments" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control form-control-user" asp-for="Email" />
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input class="form-control" asp-for="Address" />
            </div>
            <div class="form-group">
                <label asp-for="Mobile"></label>
                <input class="form-control" asp-for="Mobile" />
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
            </div>
            <div class="form-group row">
                <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <div class="custom-file">
                        <input asp-for="Photo" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div>

        @section Scripts
            {
            <script>
                $('.datepicker').datepicker({
                    format: "yyyy-mm-dd",
                    todayHighlight: true,
                    clearBtn: true,
                    orientation: "bottom auto",
                    autoclose: true,
                });
                $(".textarea").wysihtml5();
            </script>
        }
