@model UserDetailsViewModel
@section Title{
    Employee Details
}
@{
    var photoPath = "~/dist/img/user/" + (Model.user.PhotoPath ?? "noimage.jpg");
}
<div class="box">
    <div class="box-header">
        <h3 class="box-title" style="padding-bottom:20px"> @Model.user.Name Details</h3><br />
        <img src="@photoPath" asp-append-version="true" width="400" />
    </div>
    <div class="box-body">
        <table class="table table-borderless">
            <tr>
                <td>Name</td>
                <td>:</td>
                <td>@Model.user.Name</td>
            </tr>
            <tr>
                <td>Department</td>
                <td>:</td>
                <td>@Model.user.Department.Name</td>
            </tr>
            <tr>
                <td>Designation</td>
                <td>:</td>
                <td>@Model.user.Designation.Title</td>
            </tr>
            <tr>
                <td>Date of Birth</td>
                <td>:</td>
                <td>@Model.user.Dob</td>
            </tr>
            <tr>
                <td>Gender</td>
                <td>:</td>
                <td>@Model.user.Gender</td>
            </tr>
            <tr>
                <td>Email Address</td>
                <td>:</td>
                <td>@Model.user.Email</td>
            </tr>
            <tr>
                <td>Contact Number</td>
                <td>:</td>
                <td>@Model.user.Mobile</td>
            </tr>
            <tr>
                <td>Address</td>
                <td>:</td>
                <td>@Model.user.Address</td>
            </tr>

        </table>
    </div>
    <div class="box-footer text-center">
        <a asp-controller="User" asp-action="Index" class="btn btn-primary">
            <i class="fa fa-arrow-circle-left" style="padding-right: 5px;"></i>Back to List
        </a>
        <a asp-action="Edit" asp-controller="User" asp-route-id="@Model.user.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Delete" asp-controller="User" asp-route-id="@Model.user.Id" class="btn btn-danger">Delete</a>
    </div>
</div>