@model SalaryViewModel
@section Title{
    Create Salary
}
<!--Salary Create Box Starts Here-->
<div class="box box-primary">
    <div class="box-header">
        <h3 class="box-title">Create Salary Details</h3>
        <a asp-controller="Salary" asp-action="Index" class="btn btn-primary pull-right">All Salaries</a>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <!--form start-->
    <form asp-area="Admin" asp-controller="Salary" asp-action="Create" method="post" role="form">
        <div class="box-body">
            <div class="form-group">
                <label asp-for="DesignationId"></label>
                <select asp-for="DesignationId" asp-items="Model.Designations" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalaryAmount"></label>
                <input class="form-control" asp-for="SalaryAmount" />
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Submit</button>
        </div>
    </form>
</div><!--Salary Create Box Ends Here-->