@model SalaryEditViewModel
@section Title{
    Edit Salary
}
<!--Salary Create Box Starts Here-->
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="Salary" asp-action="Index" class="btn btn-primary" style=" display: table; margin-bottom: 20px;">
            <i class="fa fa-arrow-circle-left" style="padding-right: 5px;"></i>Back to List
        </a>
        <h3 class="box-title">Update Salary For: </h3>
    </div>
    <div asp-validation-summary="All" class="text-danger"></div>
    <!--form start-->
    <form asp-area="Admin" asp-controller="Salary" asp-action="Update" method="post" role="form">
        <input hidden asp-for="Id" />
        <div class="box-body">
            <div class="form-group">
                <label asp-for="DesignationId"></label>
                <select asp-for="DesignationId" asp-items="Model.Designations" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalaryAmount"></label>
                <input class="form-control" asp-for="SalaryAmount" />
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </form>
</div><!--Salary Create Box Ends Here-->