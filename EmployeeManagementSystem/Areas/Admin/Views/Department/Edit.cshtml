@model DepartmentEditViewModel
@section Title{
    Edit Department
}
<!--Department Create Box Starts Here-->
<div class="box box-primary">
    <div class="box-header">
        <a asp-controller="Department" asp-action="Index" class="btn btn-primary" style=" display: table; margin-bottom: 20px;">
            <i class="fa fa-arrow-circle-left" style="padding-right: 5px;"></i>Back to List
        </a>
        <h3 class="box-title">Edit Department: @Model.Name</h3>
    </div>
    <!--form start-->
    <form asp-area="Admin" asp-controller="Department" asp-action="Update" method="post" role="form">
        <div class="box-body">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input type="text" asp-for="Name" placeholder="Enter Department Name..." id="component" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Address"></label>
                <input type="text" asp-for="Address" placeholder="Enter Department Address..." id="component" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input type="email" asp-for="Email" placeholder="Enter Department Email Address Here..." id="component" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Contact"></label>
                <input type="text" asp-for="Contact" placeholder="Enter Department Contact Here..." id="component" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="DepartmentHead"></label>
                <input type="text" asp-for="DepartmentHead" placeholder="Enter Department Contact Here..." id="component" class="form-control">
            </div>
        </div><!-- /.box-body -->
        <div class="box-footer">
            <button type="submit" class="btn btn-success">Update</button>
        </div>
    </form>
</div><!--Department Create Box Ends Here-->